/*!
 *+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
 * Theme
 *+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
*/
/*!-----------------------------------------------------------------
	Подключение локальных шрифтов шрифтов
 -----------------------------------------------------------------*/
 @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700&display=swap")
/*-----------------------------------------------------------------
	Переменные.
 -----------------------------------------------------------------*/
:root
	--colorWhite: #fff
	--colorBlack: #000
	--colorGray: #e3e6e8
	--border-radius: 4px
	--text-color: #000000
	--main-color: #83b735

$colorWhite = #fff
$colorBlack = #000
$colorGray = #eceeef
$borderRadius = .25em
.t-success
	--bgColor: #4CAF50
	--bgColorHover: #46a049
	--borderColor: #3c763d
	--color: #001e00
.t-info
	--bgColor: #2196F3
	--bgColorHover: #0b7dda
	--borderColor: #1053a8
	--color: #003351
.t-warning
	--bgColor: #ff9800
	--bgColorHover: #ec9413
	--borderColor: #b5520e
	--color: #572d04
.t-danger
	--bgColor: #f44336
	--bgColorHover: #da190b
	--borderColor: #a94442
	--color: #4a1716
.t-secondary
	--bgColor: #fff
	--bgColorHover: #e6e6e6
	--color: #292b2c
	--borderColor: #ccc
.t-primary
.is-active
	--bgColor: #0275d8
	--bgColorHover: #01549b
	--color: #fff
	--borderColor: #003351
/*!-----------------------------------------------------------------
	Типографика
 -----------------------------------------------------------------*/
html
	font-size 16px
body
	font-family: 'Poppins'\, sans-serif
	color #000
	line-height: 1.5em
h1, h2, h3, h4, h5, h6
	font-weight 500
	line-height 1.1
h1
	font-size 2.25rem
h2
	font-size 1.875rem
h3
	font-size 1.5rem
h4
	font-size 1.125rem
h5
	font-size 0.875rem
h6
	font-size 0.75rem
small
	font-size 85%
p
	font-size 1rem
	margin 0 0 10px
	line-height 1.5em
ul
	font-size 1rem
	padding-left: $pl = 30px
	padding-inline-start: $pl
ol
	padding-left: $pl = 18px
	padding-inline-start: $pl
	counter-reset: item
	li
		display: block
		&:before
			content: counters(item, ".") "."
			counter-increment: item
			position: relative
			left: -5px
li
	padding-bottom .2em
abbr[title]
	font-size 1rem
	cursor help
	text-decoration none
address
	font-size 1rem
	font-style normal
// html[lang="ru"] q
// 	quotes: '«' '»'
/*!-----------------------------------------------------------------
	Ссылки
 -----------------------------------------------------------------*/
a
	color var(--text-color)
	text-decoration none
	&:focus
	&:hover
		color var(--main-color)
/*!-----------------------------------------------------------------
	Таблицы
 -----------------------------------------------------------------*/
table
	background-color transparent
	margin-bottom 20px
	border-spacing 0
	border-collapse collapse
	width: 100%
	max-width: 100%
	+mema(sizeMedium)
		display: block
		overflow-x: auto
	caption
		padding-bottom .2em
		font-style italic
	td, th
		padding .4rem 0.75rem
	td
		border-bottom 1px solid var(--colorGray)
	th
		text-align left
		font-weight bold
	thead th
		border 0
		border-bottom 1px solid var(--colorBlack)
	tfoot td
		border 0
		border-top 1px solid var(--colorBlack)
/*!-----------------------------------------------------------------
	Адаптивные картинки
 -----------------------------------------------------------------*/
img
	max-width 100%
	height auto
figcaption
	font-size 14
	text-align center
	font-style: italic