/*!-----------------------------------------------------------------
	layout.pug - базовый шаблон
 -----------------------------------------------------------------*/
// прижатый футер к низу
*
*:before
*:after
	box-sizing border-box
// прижатый футер к низу
html
	scroll-behavior: smooth
	scroll-padding-top: 2rem
html, body
	height: 100%
body
	display: flex
	min-height: 100vh
	// исправление возможного бага с прижатым футером в мобильной версии
	min-height: -webkit-fill-available
	flex-direction: column

// отступ в центре страницы и максимальная ширина
.l-page-width
	padding 0 15px
	// max-width: 1120px
	margin: 0 auto

$paddingPage = {
	padding-left: 10%,
	padding-right: 10%
}
$paddingTopSection = {
	padding-top: 50px
}
$paddingBottomSection = {
	padding-bottom: 50px
}

#l-header
	position fixed
	z-index 1000
	top 0
	right 0
	width 100%
	background: #edecea
	display flex
	align-items center
	justify-content space-between
	padding-top 18px
	padding-bottom 18px
	{$paddingPage}
	> .l-logo
		font-size 1.2rem
		font-weight 600
		color: var(--text-color)
		text-decoration none
		&:hover
			color: var(--main-color)
			span
				color: var(--text-color)
		> span
			color: var(--main-color)
	>.l-menu
		font-size 2rem
		cursor pointer
		display none

#l-content
	flex: 1

#l-footer
	display flex
	justify-content space-between
	flex-wrap wrap
	{$paddingPage}
	{$paddingTopSection}
	.l-footer-box
		width calc(100%/4 - 3%)
		> h3
			font-size 1.375rem
			padding 0
			margin 0
		> p
		> address
			margin-top 16px
		.l-social
			font-size 24px
			.bx
				margin-right 10px
		> ul
			padding-left 0
			> li
				list-style: none
	.l-copyright
		width 100%
		text-align center
		{$paddingTopSection}
		padding-bottom 20px
